<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/item_title_bar" />


    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_51"
        android:text="拥有管理密码可以导入标注归档所有图片和视频"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_14" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_bg" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_23"
        android:text="管理密码"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/color_333"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_16">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_input_bg"
            android:paddingRight="@dimen/dp_10" />

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_7"
            android:src="@mipmap/ic_eye" />

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_43"
        android:background="@color/main_bg" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_34"
        android:text="拥有访客密码只可以浏览图库已有图片信息【非隐私】"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_14" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_bg" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_23"
        android:text="访客密码"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/color_333"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_16">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_input_bg"
            android:paddingRight="@dimen/dp_10" />

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_7"
            android:src="@mipmap/ic_eye" />

    </RelativeLayout>



</LinearLayout>